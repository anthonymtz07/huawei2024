<%- include('template/title_admin')%>
<link rel="stylesheet" href="/static/css/index.css">
<div class="row">
    <!--Presentation-->
    <div class="col-6" style="background-color: black; display: flex; align-items: center; justify-content: center;">
    <center>
        <p style="font-size: 50px;">
            <span style="color: #B5070E;">Important</span>
            <span style="color: #FFF;">Comments</span>
        </p>
    </center>
    </div>
    <div class="col-6" style="padding: 0; border-top-right-radius: 10px; border-bottom-right-radius: 10px;">
    <img src="/static/img/background/comments.jpg" class="card-img-top" alt="404image">
    </div>
</div>

<div class="container" style="margin-bottom: 5%;">
    <div class="row">
        <div class="card">
            <div class="card-body" style="overflow-x: auto;">
                <table class="table"  style="table-layout: fixed; width: 100%;">
                    <thead>
                        <tr>
                            <th scope="col">No.</th>
                            <th scope="col">Name</th>
                            <th scope="col">Comment</th>
                            <th scope="col">More</th>
                        </tr>
                    </thead>
                    <%
                    var i= 1;
                    comment.forEach((comment)=>{
                        if(i%2){
                    %>
                    <tbody>
                        <tr>
                            <th scope="row"><%=i%></th>
                            <td><%=comment.name%> <%=comment.lastname%></td>
                            <td style="max-width: 200px; overflow: hidden; text-overflow: ellipsis;"><%=comment.comment%></td>
                            <td>
                                <a href="/mongodb/delete/<%=comment._id%>" type="submit" class="btn" style="background-color: #B5070E; color: #fff;">Borrar</a>
                            </td>
                        </tr>
                        <%
                        } else{
                        %>
                        <tr style="background-color: #e9bfc1;">
                            <th scope="row"><%=i%></th>
                            <td><%=comment.name%> <%=comment.lastname%></td>
                            <td style="max-width: 200px; overflow: hidden; text-overflow: ellipsis;"><%=comment.comment%></td>
                            <td>
                                <a href="/mongodb/delete/<%=comment._id%>" type="submit" class="btn" style="background-color: #B5070E; color: #fff;">Borrar</a>
                            </td>
                        </tr>
                        <%
                        }
                        i = i+1;
                    });
                    %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>